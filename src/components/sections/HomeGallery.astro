---
import { Image } from "astro:assets";

import image1 from "../../assets/images/galery/1.png";
import image2 from "../../assets/images/galery/2.png";
import image3 from "../../assets/images/galery/4.png";
import image4 from "../../assets/images/galery/3.png";
---

<section class="container mx-auto px-4 py-10">
  <ul class="grid grid-cols-3 gap-4">
    <!-- Fila 1 -->
    <li
      class="col-span-1 flex justify-center items-center overflow-hidden h-[450px]"
    >
      <Image
        src={image1}
        alt=""
        draggable="false"
        loading="eager"
        class="w-full h-full object-cover"
      />
    </li>
    <li class="col-span-2 overflow-hidden h-[450px]">
      <Image
        src={image2}
        alt=""
        draggable="false"
        loading="eager"
        class="w-full h-full object-cover"
      />
    </li>

    <!-- Fila 2 -->
    <li class="col-span-2 overflow-hidden h-[450px]">
      <Image
        src={image3}
        alt=""
        draggable="false"
        loading="eager"
        class="w-full h-full object-cover"
      />
    </li>
    <li
      class="col-span-1 flex justify-center items-center overflow-hidden h-[450px]"
    >
      <Image
        src={image4}
        alt=""
        draggable="false"
        loading="eager"
        class="w-full h-full object-cover"
      />
    </li>
  </ul>
</section>
