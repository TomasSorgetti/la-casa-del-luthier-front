---
import { Image } from "astro:assets";
import background from "../../assets/images/wood.png";
import MainButton, { Variant } from "../ui/buttons/MainButton.astro";
---

<section class="container mx-auto my-40 px-4">
  <div
    class="relative overflow-hidden h-[700px] w-full flex items-center justify-start"
  >
    <div class="relative z-10 px-28 flex flex-col items-start justify-center">
      <span class="text-lg text-font-secondary tracking-[0.4rem]"
        >VENTA DE MADERAS</span
      >
      <h2 class="text-font-secondary text-5xl font-semibold mt-2 max-w-md">
        Estas buscando comprar maderas?
      </h2>
      <p class="text-lg my-8 max-w-md">
        taller de luthería, artesanal, fabricación de instrumentos musicales,
        reparación profesional. taller de luthería, artesanal, fabricación de
        instrumentos musicales, reparación profesional.taller de luthería.
      </p>
      <MainButton
        href="/maderas"
        dataLabel="Ir a página de maderas"
        variant={Variant.PRIMARY}>Comprar</MainButton
      >
    </div>

    <Image
      src={background}
      alt=""
      class="absolute w-full h-full inset-0 object-cover"
    />
  </div>
</section>
