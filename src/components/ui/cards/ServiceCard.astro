---
import { Image } from "astro:assets";

const { label, title, description, href = "/#", image } = Astro.props;
---

<a
  href={href}
  data-label={`ir a ${title}`}
  class="relative flex aspect-square h-full w-full overflow-hidden group"
>
  <div
    class="w-full h-full bg-gradient-to-b from-black to-black/40 absolute left-0 top-0 z-10 opacity-50 group-hover:opacity-100 transition-all duration-300"
  >
  </div>
  <Image
    src={image}
    alt="Taller de lutheria con una guitarra clÃ¡sica"
    loading="eager"
    class="absolute inset-0 object-cover w-full h-full"
  />

  <div
    class="relative z-20 p-8 text-font-primary lg:p-12 opacity-0 group-hover:opacity-100"
  >
    <span class="text-xs lg:text-sm">{label}</span>
    <h3 class="text-2xl font-semibold lg:text-3xl">{title}</h3>
    <p class="text-base lg:text-lg mt-8">{description}</p>
  </div>
</a>
