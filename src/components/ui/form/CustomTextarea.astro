---
const {
  id,
  label,
  name,
  value,
  placeholder,
  required,
  disabled,
  readonly,
  autocomplete,
  autofocus,
  error = "",
} = Astro.props;
---

<div class="flex flex-col gap-2 items-start">
  <label for={id} class="text-font-secondary">{label}</label>
  <textarea
    id={id}
    name={name}
    value={value}
    placeholder={placeholder}
    {required}
    {disabled}
    {readonly}
    {autocomplete}
    {autofocus}
    class="bg-background w-full h-40 rounded text-font-tertiary p-3 resize-none"
  ></textarea>
  <small>{error}</small>
</div>
